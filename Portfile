# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           golang 1.0

go.setup            github.com/blacktop/ipsw 3.1.256 v
github.tarball_from archive
revision            0

homepage            https://blacktop.github.io/ipsw

description         iOS/macOS Research Swiss Army Knife.

long_description    {*}${description}. Everything you need to get started \
                    researching Apple security and internals.

categories          security
installs_libs       no
license             MIT
maintainers         https://github.com/blacktop

checksums           rmd160  057b962013fee3a803768a1db9ccba84c347c03c \
                    sha256  0910082f5f17cf7908807b3102ee0d2e39749ddc2c13e33ddcd8eb33ca800b13 \
                    size    3526849

set build_script    ${worksrcpath}/_build.sh

# Allow deps to be fetched at build-time.
build.env-delete    GO111MODULE=off GOPROXY=off

build.cmd           ${build_script}
build.pre_args      {}
build.args          {}

post-extract {
    set bs [open "${build_script}" w+]
    puts ${bs} "#!/bin/sh"
    puts ${bs} "set -x"
    puts ${bs} "CGO_ENABLED=1 ${go.bin} build -trimpath -ldflags \" -s -w -X github.com/blacktop/ipsw/cmd/ipsw/cmd.AppVersion=${version} -X github.com/blacktop/ipsw/cmd/ipsw/cmd.AppBuildTime=$(date -u +%Y%m%d) \" && \\"
    puts ${bs} "./hack/make/completions"
    close ${bs}

    file attributes ${build_script} -permissions 0755
}

destroot {
    xinstall -m 0755 ${worksrcpath}/${name} ${destroot}${prefix}/bin/

    set bash_comp_dir ${destroot}${prefix}/share/bash-completion/completions
    xinstall -d ${bash_comp_dir}
    copy ${worksrcpath}/completions/_bash ${bash_comp_dir}/${name}

    set fish_comp_dir ${destroot}${prefix}/share/fish/vendor_completions.d
    xinstall -d ${fish_comp_dir}
    copy ${worksrcpath}/completions/_fish ${fish_comp_dir}/

    set zsh_comp_dir ${destroot}${prefix}/share/zsh/site-functions
    xinstall -d ${zsh_comp_dir}
    copy ${worksrcpath}/completions/_zsh ${zsh_comp_dir}/_${name}
}